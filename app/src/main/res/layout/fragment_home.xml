<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/view_loading"
             android:visibility="gone"/>
    <include layout="@layout/view_error"
             android:visibility="gone"/>
    <include layout="@layout/view_check_net"
             android:visibility="gone"/>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/view_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_search_area"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/select_white_orange_rectangle_r30"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/search_" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="探索商品"
                        android:minEms="15" />
                </LinearLayout>



                <com.bigkoo.convenientbanner.ConvenientBanner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    app:canLoop="true" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rc_headicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_category1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:textSize="11sp"
                            android:textColor="@color/colorBlack"
                            android:drawablePadding="2dp"
                            android:clickable="true"
                            android:gravity="center"
                            android:minEms="3"
                            android:text="红酒" />

                        <TextView
                            android:id="@+id/tv_category2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:textSize="11sp"
                            android:textColor="@color/colorBlack"
                            android:drawablePadding="2dp"
                            android:clickable="true"
                            android:gravity="center"
                            android:minEms="3"
                            android:text="白酒" />

                        <TextView
                            android:id="@+id/tv_category3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:textSize="11sp"
                            android:textColor="@color/colorBlack"
                            android:drawablePadding="2dp"
                            android:clickable="true"
                            android:gravity="center"
                            android:minEms="3"
                            android:text="洋酒" />

                        <TextView
                            android:id="@+id/tv_category4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:textSize="11sp"
                            android:textColor="@color/colorBlack"
                            android:drawablePadding="2dp"
                            android:clickable="true"
                            android:gravity="center"
                            android:minEms="3"
                            android:text="保健酒" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_category5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:textSize="11sp"
                            android:textColor="@color/colorBlack"
                            android:drawablePadding="2dp"
                            android:clickable="true"
                            android:gravity="center"
                            android:minEms="3"
                            android:text="时尚酒" />

                        <TextView
                            android:id="@+id/tv_category6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:textSize="11sp"
                            android:textColor="@color/colorBlack"
                            android:drawablePadding="2dp"
                            android:clickable="true"
                            android:gravity="center"
                            android:minEms="3"
                            android:text="珍藏" />

                        <TextView
                            android:id="@+id/tv_category7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:textSize="11sp"
                            android:textColor="@color/colorBlack"
                            android:drawablePadding="2dp"
                            android:clickable="true"
                            android:drawableTop="@drawable/cargo_collection_"
                            android:gravity="center"
                            android:minEms="3"
                            android:text="集货" />

                        <TextView
                            android:id="@+id/tv_category8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:textSize="11sp"
                            android:textColor="@color/colorBlack"
                            android:drawablePadding="2dp"
                            android:clickable="true"
                            android:drawableTop="@drawable/more_"
                            android:gravity="center"
                            android:minEms="3"
                            android:text="更多" />

                    </LinearLayout>
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/colorGray" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="5dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:background="@color/colorAccent" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="热门推荐"
                        android:textSize="11sp"
                        android:textColor="@color/colorAccent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:id="@+id/iv_hot_image1"
                        tools:src="@drawable/draw_temp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_hot_image2"
                            android:layout_width="204dp"
                            android:layout_height="73dp"
                            tools:src="@color/colorTextGray" />

                        <ImageView
                            android:layout_marginTop="5dp"
                            android:id="@+id/iv_hot_image3"
                            android:layout_width="204dp"
                            android:layout_height="73dp"
                            tools:src="@color/colorGray" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/colorGray"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="5dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:background="@color/colorAccent" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品展示"
                        android:textSize="11sp"
                        android:textColor="@color/colorAccent" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rc_goods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>

