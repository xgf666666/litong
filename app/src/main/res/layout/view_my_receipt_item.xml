<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_my_receipt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:gravity="right"
        android:layout_marginRight="@dimen/margin_14"
        android:layout_marginBottom="@dimen/margin_8"
        android:textSize="@dimen/text_dimen_third"
        android:textColor="@color/text_color_first"
        android:text="等待需求方确认"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#22000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_my_receipt_img"
            android:layout_width="@dimen/my_receipt_img_width"
            android:layout_height="@dimen/my_receipt_img_width"
            android:layout_marginLeft="@dimen/margin_14"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_8"
            android:src="@mipmap/ic_launcher"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_12"
            android:gravity="left"
            android:layout_marginTop="@dimen/margin_14"
            android:layout_marginBottom="@dimen/margin_14">

            <TextView
                android:id="@+id/tv_my_receipt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_dimen_third"
                android:textColor="@color/text_color_first"
                android:lines="2"
                android:text="2323"/>

            <TextView
                android:id="@+id/tv_my_receipt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="44512"
                android:textColor="@color/price_color"
                android:textSize="@dimen/text_dimen_first"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_14"
            android:layout_marginTop="@dimen/margin_14"
            android:layout_marginLeft="@dimen/margin_12"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_my_receipt_look"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_receipt_look"
                android:background="@drawable/shape_white_side_black_r5"
                android:padding="@dimen/margin_8"
                android:textSize="@dimen/text_dimen_third"
                android:textColor="@color/text_color_first"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/tv_my_receipt_evaluate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_receipt_evaluate"
                android:background="@drawable/shape_white_side_black_r5"
                android:padding="@dimen/margin_8"
                android:textSize="@dimen/text_dimen_third"
                android:textColor="@color/text_color_first"
                android:layout_marginTop="@dimen/margin_14"
                android:gravity="center"
                android:visibility="visible"
                />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>