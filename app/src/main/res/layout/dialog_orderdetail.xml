<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="27dp"
    android:layout_marginRight="27dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定订单"
        android:textSize="@dimen/text_dimen_first"
        android:textColor="@color/color222222"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认后请等待需求方确认"
        android:textSize="@dimen/text_dimen_first"
        android:textColor="@color/color888888"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorE5E5E5"
        android:layout_marginTop="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_quxiao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消"
            android:textSize="@dimen/text_dimen_first"
            android:textColor="@color/color3078EF"
            android:background="@null"
            android:gravity="center"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/colorE5E5E5" />

        <Button
            android:id="@+id/bt_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确定"
            android:textSize="@dimen/text_dimen_first"
            android:textColor="@color/color3078EF"
            android:background="@null"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>