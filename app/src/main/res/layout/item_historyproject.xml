<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:background="@color/white"
    android:id="@+id/rl_father">

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:layout_margin="8dp"/>
    <ImageView
        android:id="@+id/iv_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_success"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="羡慕激发大家发非打飞机放大镜放大镜代发放大 "
        android:textSize="@dimen/text_dimen_third"
        android:textColor="@color/color222222"
        android:layout_toRightOf="@id/iv_head"
        android:layout_alignTop="@+id/iv_head"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="7dp"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="截止时间:2018.7.3 "
        android:textSize="@dimen/text_dimen_fourth"
        android:textColor="@color/color888888"
        android:layout_toRightOf="@id/iv_head"
        android:layout_alignBottom="@+id/iv_head"
        android:layout_marginLeft="7dp"/>
    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="700m "
        android:textSize="@dimen/text_dimen_third"
        android:textColor="@color/color888888"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tv_time"
        android:layout_marginRight="20dp"/>
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$200000 "
        android:textSize="@dimen/text_dimen_first"
        android:layout_toRightOf="@+id/iv_head"
        android:layout_marginLeft="7dp"
        android:textColor="#FF0000"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"/>


</RelativeLayout>
