<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp">
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_guide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/btn_jump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳过"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_dimen_third"
            android:background="#88000000"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_8"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_steup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_blue_guide"
        android:text="下一步"
        android:textColor="@color/text_color_white"
        android:textSize="@dimen/text_dimen_first"
        android:paddingTop="@dimen/margin_19"
        android:paddingBottom="@dimen/margin_19"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginTop="@dimen/margin_19"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_14"
        android:layout_marginBottom="@dimen/margin_19"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/iv_point_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_8"
            android:src="@mipmap/ic_point_normal" />

        <ImageView
            android:id="@+id/iv_point_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_8"
            android:src="@mipmap/ic_point_pressed" />

        <ImageView
            android:id="@+id/iv_point_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_8"
            android:src="@mipmap/ic_point_pressed" />
    </LinearLayout>

</LinearLayout>