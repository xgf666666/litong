<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/search_project_icon_margin"
    android:layout_marginLeft="@dimen/search_project_title_txt_left"
    android:layout_marginRight="@dimen/search_project_title_txt_left"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cv_work_list_item_img"
        android:layout_width="@dimen/work_list_img_width"
        android:layout_height="@dimen/work_list_img_height"
        android:layout_margin="@dimen/margin_12"
        android:src="@mipmap/img_face"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_14"
            android:orientation="horizontal"
            android:layout_gravity="right">
            <TextView
                android:id="@+id/tv_work_item_name_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lines="1"
                android:text="name  phone"
                android:textSize="@dimen/text_dimen_third"
                android:textColor="@color/text_color_first"/>

            <TextView
                android:id="@+id/tv_work_item_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_14"
                android:text="700m"
                android:textSize="@dimen/text_dimen_fourth"
                android:textColor="@color/text_color_third"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_work_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:text="asd"
            android:textSize="@dimen/text_dimen_fourth"
            android:textColor="@color/text_color_third"
            />

        <TextView
            android:id="@+id/tv_work_item_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_14"
            android:text="asd"
            android:textSize="@dimen/text_dimen_fourth"
            android:textColor="@color/text_color_third"
            android:drawableLeft="@mipmap/ic_list_location"
            android:drawablePadding="@dimen/margin_3"
            android:lines="1"
            android:layout_marginBottom="@dimen/margin_8"
            />
    </LinearLayout>

</LinearLayout>