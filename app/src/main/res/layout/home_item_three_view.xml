<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_normal_bg_white_gray">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_home_item_three_img"
            android:layout_width="@dimen/home_item_three_img_width"
            android:layout_height="@dimen/home_item_three_img_height"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/tv_home_item_three_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_home_item_three_img"
            android:text="time"
            android:layout_marginBottom="@dimen/margin_9"
            android:textSize="@dimen/text_dimen_fitth"
            android:textColor="@color/text_color_white"
            android:background="#88000000"
            android:padding="@dimen/margin_3"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_home_item_three_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/home_item_three_text_margin"
        android:layout_marginLeft="@dimen/home_item_three_text_margin"
        android:textSize="@dimen/text_dimen_fourth"
        android:textColor="@color/text_color_first"
        android:text="name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_home_item_three_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/home_item_three_text_margin"
            android:layout_marginLeft="@dimen/home_item_three_text_margin"
            android:textSize="@dimen/text_dimen_fourth"
            android:textColor="@color/price_color"
            android:text="ï¿¥500"
            android:layout_marginBottom="@dimen/margin_9"/>
        <TextView
            android:id="@+id/tv_home_item_three_distance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/home_item_three_text_margin"
            android:layout_marginLeft="@dimen/home_item_three_text_margin"
            android:textSize="@dimen/text_dimen_fitth"
            android:textColor="@color/text_color_third"
            android:text="500m"
            android:gravity="right"
            android:layout_marginRight="@dimen/margin_14"
            android:layout_marginBottom="@dimen/margin_9"/>
    </LinearLayout>


</LinearLayout>