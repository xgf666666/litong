<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#eeeeee">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginBottom="10dp">
        <RelativeLayout
            android:id="@+id/rl_father"
            android:layout_width="match_parent"
            android:layout_height="91dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_head"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="15dp"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="戴元明 18304994 "
                android:textSize="@dimen/text_dimen_third"
                android:textColor="@color/color222222"
                android:layout_toRightOf="@id/iv_head"
                android:layout_marginTop="14dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="7dp"/>
            <TextView
                android:id="@+id/tv_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="服务类型：刷墙 "
                android:textSize="@dimen/text_dimen_fourth"
                android:textColor="@color/color888888"
                android:layout_toRightOf="@id/iv_head"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="7dp"
                android:layout_below="@+id/tv_name"/>
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="广州市天河区 "
                android:drawableLeft="@drawable/ic_list_location"
                android:drawablePadding="4dp"
                android:textSize="@dimen/text_dimen_fourth"
                android:layout_toRightOf="@+id/iv_head"
                android:layout_marginLeft="7dp"
                android:textColor="@color/color888888"
                android:gravity="center"
                android:layout_alignBottom="@+id/iv_head"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="700m "
                android:textSize="@dimen/text_dimen_fourth"
                android:layout_marginLeft="7dp"
                android:textColor="@color/color888888"
                android:gravity="center"
                android:layout_marginTop="14dp"
                android:layout_marginRight="10dp"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#eeeeee"/>

            <TextView
                android:id="@+id/tv_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="移出黑名单 "
                android:textSize="@dimen/text_dimen_third"
                android:textColor="@color/color222222"
                android:background="@drawable/sp_project_item"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:layout_gravity="right"
                android:layout_marginRight="11dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"/>
    </LinearLayout>

</LinearLayout>
