<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cv_work_evaluate_img"
        android:layout_width="@dimen/work_evaluate_img_width"
        android:layout_height="@dimen/work_evaluate_img_height"
        android:src="@mipmap/img_face"
        android:layout_marginTop="@dimen/margin_8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_work_evaluate_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="name"
                android:textSize="@dimen/text_dimen_third"
                android:textColor="@color/text_color_first"
                />
            <com.weibiaogan.litong.widget.StarView
                android:id="@+id/sv_work_evaluate_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_work_evaluate_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_14"
            android:layout_marginRight="@dimen/margin_14"
            android:textColor="@color/text_color_third"
            android:textSize="@dimen/text_dimen_third"
            android:text="ddedd"/>
        <LinearLayout
            android:id="@+id/ll_work_evaluate_imgs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_9"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_work_evaluate_one"
                android:layout_width="0dp"
                android:layout_height="@dimen/work_evaluate_item_img_height"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/margin_9"
                android:src="@mipmap/img_default"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/iv_work_evaluate_two"
                android:layout_width="0dp"
                android:layout_height="@dimen/work_evaluate_item_img_height"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/margin_9"
                android:src="@mipmap/img_default"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/iv_work_evaluate_three"
                android:layout_width="0dp"
                android:layout_height="@dimen/work_evaluate_item_img_height"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/margin_9"
                android:src="@mipmap/img_default"
                android:scaleType="fitXY"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_work_evaluate_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_9"
            android:layout_marginBottom="@dimen/margin_14"
            android:text="date"
            android:textColor="@color/text_color_third"
            android:textSize="@dimen/text_dimen_fourth"/>
    </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#11000000"/>

</LinearLayout>