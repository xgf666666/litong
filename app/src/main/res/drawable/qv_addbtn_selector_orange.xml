<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="0dp" android:topRightRadius="2dp" android:bottomRightRadius="2dp" android:topLeftRadius="0dp"/>
            <solid android:color="#D9D9D9" />
            <stroke android:width="1px" android:color="@color/colorAccent"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="0dp" android:topRightRadius="2dp" android:bottomRightRadius="2dp" android:topLeftRadius="0dp"/>

            <solid android:color="@color/white" />
            <stroke android:width="1px" android:color="#D9D9D9"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="0dp" android:topRightRadius="2dp" android:bottomRightRadius="2dp" android:topLeftRadius="0dp"/>

            <solid android:color="@color/white" />
            <stroke android:width="1px" android:color="@color/colorAccent"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="0dp" android:topRightRadius="2dp" android:bottomRightRadius="2dp" android:topLeftRadius="0dp"/>

            <solid android:color="@color/white" />
            <stroke android:width="1px" android:color="@color/colorAccent"/>
        </shape>
    </item>

</selector>