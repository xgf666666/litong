<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="2dp" android:topRightRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="2dp"/>

            <solid android:color="#D9D9D9" />
            <stroke android:width="1px" android:color="#B3B3B3"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="2dp" android:topRightRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="2dp"/>

            <solid android:color="@color/white" />
            <stroke android:width="1px" android:color="#D9D9D9"/>
        </shape>
    </item>
    <item android:state_selected="true">

        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="2dp" android:topRightRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="2dp"/>

            <solid android:color="@color/white" />
            <stroke android:width="1px" android:color="#B3B3B3"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="2dp" android:topRightRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="2dp"/>

            <solid android:color="@color/white" />
            <stroke android:width="1px" android:color="#B3B3B3"/>
        </shape>
    </item>

</selector>